<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RewardsDetails">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="פרטי פרס"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/RewardItem"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:contentDescription="תמונת הפרס" />

    <TextView
        android:id="@+id/RewardDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="פרטי הפרס"
        android:layout_gravity="center"
        android:fontFamily="@font/dinpro_medium"
        android:textSize="22sp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/rewardPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="נקודות נדרשות: 0"
        android:layout_gravity="center"
        android:fontFamily="@font/dinpro_medium"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textColor="#2196F3" />

    <TextView
        android:id="@+id/statusMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="סטטוס רכישה"
        android:layout_gravity="center"
        android:fontFamily="@font/dinpro_medium"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"
        android:textColor="#4CAF50"
        android:visibility="gone" />

    <Button
        android:id="@+id/purchaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase"
        android:layout_gravity="center"
        android:backgroundTint="#2196F3"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/RewardCodeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redemption code: "
        android:textSize="20sp"
        android:fontFamily="@font/dinpro_medium"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/RewardCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345678987654321258"
        android:textSize="18sp"
        android:textColor="#2196F3"
        android:layout_gravity="center"
        android:fontFamily="@font/dinpro_medium"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/RewardDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/dinpro_medium"
        android:text="Description of the award"
        android:textColor="#AAAAAA"
        android:textSize="14sp" />

</LinearLayout>